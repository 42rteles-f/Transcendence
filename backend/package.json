{
	"main": "./src/index.ts",
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"start": "node ./dest/index.js",
		"dev": "nodemon --watch './src/**/*.ts' --exec 'ts-node' ./src/index.ts",
		"clear": "rm -rf ./dest",
		"prune": "npm run clear && rm -rf ./node_modules ./package-lock.json ./db/db.sqlite3",
		"re": "npm run prune && npm install && npm run down && npm run up && npm run dev",
		"migrate": "node ./db/migrate.js",
		"up": "node ./db/migrate.js up",
		"down": "node ./db/migrate.js down",
		"games": "node ./db/mocks/insert_games.js",
		"users": "node ./db/mocks/insert_users.js"
	},
	"dependencies": {
		"@fastify/cors": "^11.0.1",
		"bcrypt": "^6.0.0",
		"dotenv": "^16.5.0",
		"fastify": "^5.3.3",
		"fastify-cors": "^6.0.3",
		"fastify-plugin": "^5.0.1",
		"jsonwebtoken": "^9.0.2",
		"pg": "^8.16.0",
		"socket.io": "^4.8.1",
		"sqlite3": "^5.1.7"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/ms": "^2.1.0",
		"@types/node": "^22.15.23",
		"@types/pg": "^8.15.2",
		"@types/socket.io": "^3.0.1",
		"nodemon": "^3.0.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3"
	}
}
 